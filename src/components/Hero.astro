---
import logoLight from "../assets/Logo-Light.png"
import heroImage from "../assets/Hero.jpeg"
import phoneSvg from "../assets/phone.svg"
import mailSvg from "../assets/mail.svg"
import Scroll from "../components/Scroll.astro"
import { Image } from "astro:assets"
---

<div class="hero">
  <div class="wrapper hero__logo">
    <Image src={logoLight} alt="Logo" loading="eager" />
    <div class="scroll"><Scroll /></div>
  </div>

  <div class="hero__contact wrapper">
    <div class="hero__contact__item">
      <Image src={phoneSvg} alt="phone icon" loading="eager" />
      <p>+48 508 112 123</p>
    </div>
    <div class="hero__contact__item">
      <Image src={mailSvg} alt="phone icon" loading="eager" />
      <p>broken@op.pl</p>
    </div>
  </div>

  <div class="bg">
    <div class="bg__gradient"></div>
    <Image src={heroImage} alt="Hero" loading="eager" />
  </div>
</div>

<style>
  .hero {
    position: relative;
    height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    isolation: isolate;
  }

  .hero__logo {
    z-index: 1;
    background-size: cover;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }

  .scroll {
    position: absolute;
    top: calc(100% - 12.5rem);
  }

  .hero__logo img {
    width: 100%;
    height: auto;
  }

  .hero__contact {
    z-index: 2;
    position: absolute;
    background-color: var(--clr-secondary);
    top: 100%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-evenly;
    padding: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .hero__contact__item {
    display: flex;
    gap: 2rem;
    font-weight: 700;
  }

  .bg {
    z-index: 0;
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 1) 100%
    );
  }

  .bg__gradient {
    z-index: 0;
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.75) 100%
    );
  }

  .bg img {
    z-index: -1;
    object-fit: cover;
    width: 100%;
    height: 100%;
    pointer-events: none;
    position: relative;
    filter: blur(4px);
  }

  @media (min-width: 60rem) {
    .scroll {
      position: initial;
    }

    .hero__contact {
      flex-direction: row;
    }
  }
</style>
