<div class="preview">
  <div class="preview__container">
    <Image id="preview__img" src={logoLight} alt="preview" />
  </div>
</div>

<style>
  .gallery {
    margin-bottom: 4rem;
  }

  .heading {
    display: flex;
    filter: drop-shadow(4px 4px 4px rgba(0, 0, 0, 0.25));
  }

  .heading__title {
    display: flex;
    z-index: 1;
    position: relative;
    background-color: var(--clr-secondary);
    flex-basis: 100%;
    align-items: center;
    gap: 1rem;
    padding-left: 1rem;
    text-transform: uppercase;
    font-size: 0.75rem;
  }

  .heading__title svg {
    flex-basis: 3rem;
  }

  .gallery__slider__container {
    position: relative;
  }

  .gallery__slider {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    height: calc(100dvw - 3rem);
    overflow-x: scroll;
    padding-inline: 1.5rem;
    margin-top: 1.5rem;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    -ms-overflow-style: none;
    scrollbar-width: none;
    scroll-behavior: smooth;
    position: relative;
  }

  .gallery__slider::-webkit-scrollbar {
    display: none;
  }

  .gallery__slider > img {
    scroll-margin-top: 8rem;
    width: calc(100dvw - 3rem);
    height: 100%;
    object-fit: cover;
    cursor: -moz-grab;
    border-radius: 4px;
    scroll-snap-align: center;
    filter: grayscale(1);
    transition: filter 250ms ease-in-out;
    flex-shrink: 0;
    flex-grow: 1;
  }

  .gallery__slider > *:hover {
    filter: grayscale(0);
  }

  .slider__arrow {
    position: absolute;
    width: 2rem;
    height: 2rem;
    aspect-ratio: 1/1;
    top: 50%;
    left: 3rem;
    z-index: 999;
    transform: translate(0, -50%);
    display: none;
  }

  .slider__arrow.right {
    left: auto;
    right: 3rem;
  }

  .gallery__info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 1rem;
    align-items: center;
    background-color: var(--clr-secondary);
    margin-top: 1.5rem;
  }

  .info__item {
    display: flex;
    gap: 1rem;
    font-weight: bold;
  }

  .gallery__grid {
    display: grid;
    margin-top: 1.5rem;
    gap: 1.5rem;
  }

  .gallery__grid > * {
    aspect-ratio: 1/1;
    width: 100%;
    height: 100%;
    object-fit: cover;
    cursor: pointer;
    overflow: hidden;
    border-radius: 4px;
    filter: drop-shadow(4px 4px 8px rgba(0, 0, 0, 0.25)) grayscale(1);
    transition: filter 250ms ease-in-out;
    pointer-events: none;
  }

  .gallery__grid > *:hover {
    filter: drop-shadow(4px 4px 8px rgba(0, 0, 0, 0.25)) grayscale(0);
  }

  .preview {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.75);
    display: grid;
    place-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 125ms ease-in-out;
  }

  .preview.open {
    opacity: 1;
    pointer-events: all;
  }

  .preview__container {
    position: absolute;
    inset: 1.5rem;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .preview__container img {
    width: max-content;
    height: max-content;
    object-fit: contain;
    border: 4px solid white;
    border-radius: 4px;
  }

  @media (min-width: 60rem) {
    .heading__title {
      font-size: 1.25rem;
    }

    .gallery__grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .gallery__slider {
      padding-inline: calc((100% - 60rem) / 2);
      height: 40rem;
      gap: 2rem;
    }

    .gallery__slider > img {
      aspect-ratio: 16/9;
      width: 60rem;
    }

    .slider__arrow {
      display: block;
      left: calc(100% / 2 - 27.5rem);
    }

    .slider__arrow.right {
      left: auto;
      right: calc(100% / 2 - 27.5rem);
    }

    .gallery__info {
      flex-direction: row;
      justify-content: space-evenly;
      padding: 1.5rem;
    }

    .preview__container img {
      max-height: 100%;
    }
  }
</style>

<script>
  // const images = document.querySelectorAll(".gallery__grid img")
  const images = document.querySelectorAll(".gallery__slider img")
  const previewImg: any = document.querySelector("#preview__img")
  const preview = document.querySelector(".preview")

  let gallery1Id = "gallery1-0"
  let gallery2Id = "gallery2-0"

  images.forEach(image => {
    image.addEventListener("click", (img: any) => {
      const galleryId = img.target.attributes.id.value
      if (galleryId === gallery1Id || galleryId === gallery2Id) {
        previewImg.src = img.target.attributes.src.value
        preview?.classList.add("open")
      } else {
        if (galleryId.split("-")[0] === "gallery1") {
          gallery1Id = galleryId
          window.location.href = `#${galleryId}`
        } else if (galleryId.split("-")[0] === "gallery2") {
          gallery2Id = galleryId
          window.location.href = `#${galleryId}`
        }
      }
    })
  })

  preview?.addEventListener("click", () => {
    preview?.classList.remove("open")
  })
</script>
